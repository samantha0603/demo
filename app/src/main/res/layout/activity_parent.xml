<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paint"
    tools:context=".TeacherClasses.Teacher" >

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/u" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:background="@drawable/v" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/Button01"
        android:layout_below="@+id/Button01"
        android:layout_marginTop="22dp"
        android:background="@drawable/w" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Button03"
        android:layout_below="@+id/Button03"
        android:layout_marginTop="22dp"
        android:background="@drawable/y" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Button02"
        android:layout_centerVertical="true"
        android:background="@drawable/x" />

    <Button
        android:id="@+id/notice"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:background="@android:color/transparent"
        android:text="Notice"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/logoutbtn2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@android:color/transparent"
        android:text="LOG OUT"

        android:textColor="#ffffff"
        android:textSize="30dp" />

</RelativeLayout>
